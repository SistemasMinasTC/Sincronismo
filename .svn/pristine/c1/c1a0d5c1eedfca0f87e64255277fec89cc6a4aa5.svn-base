from recordtype import recordtype

def convert(conn_ifx, conn_sql, linha_log):
    Chave = recordtype('Chave', 'nro_seq_acomp')
    chave = Chave(*linha_log.pk.split('|'))

    cr_sql = conn_sql.cursor()
    try:
        cr_sql.execute('create table #sincronizando (dummy char(1))')
    except:
        pass

    cr_ifx = conn_ifx.cursor()
    cr_ifx.execute('execute procedure em_sincronismo()')

    if linha_log.operacao == 'delete':
        cr_sql.execute(f"""
            delete from Acompanhante
            where
                IdAcompanhante = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
        """, (
            linha_log.pk
        ))

        cr_sql.close()
        return

    cr_ifx.execute("""
        select
            'MTC' as cod_clube,
            nro_seq_acomp
        from acompanhante
        where
            nro_seq_acomp = ?
    """,(
        chave.nro_seq_acomp,
    ))

    Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])
    linha = cr_ifx.fetchone()
    origem = Linha(*linha) if linha else None

    cr_sql.execute("""
        update Acompanhante set
            IdClube = ?,
            IdPessoa = ?
        where
            IdAcompanhante = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
    """,(
            origem.cod_clube,
            linha_log.pk,
    ))

    if cr_sql.rowcount == 0:
        cr_sql.execute('begin transaction')

        cr_sql.execute(f"""
            insert into Acompanhante
            (
                IdClube,
                IdPessoa
            ) output inserted.IdAcompanhante  values (
                ? /*IdClube*/,
                ? /*IdPessoa*/
            )
        """,(
            origem.cod_clube,
            origem.nro_seq_acomp
        ))

        pkSql = cr_sql.fetchval()

        cr_sql.execute("insert into PkDePara values ('Acompanhante',?,?)",(pkSql, linha_log.pk,))
        cr_sql.execute("commit transaction")

    cr_sql.close()

