from recordtype import recordtype

def convert(conn_ifx, conn_sql, linha_log):
    Chave = recordtype('Chave', 'cod_tipo_associado,cod_cota')
    chave = Chave(*linha_log.pk.split('|'))

    cr_sql = conn_sql.cursor()
    try:
        cr_sql.execute('create table #sincronizando (dummy char(1))')
    except:
        pass

    cr_ifx = conn_ifx.cursor()
    cr_ifx.execute('execute procedure em_sincronismo()')

    if linha_log.operacao == 'delete':
        cr_sql.execute(f"""
            delete from Cota
            where
                IdCota = (select PkSql from PkDePara where Tabela = 'Cota' and PkIfx = ?)
        """, (
            linha_log.pk
        ))

        cr_sql.close()
        return

    cr_ifx.execute("""
        select
            'MTC' as cod_clube,
            cod_tipo_associado,
            cod_cota,
            cod_tipo_associado || '|' || cod_tipo_cota as cod_tipo_cota,
            dat_criacao_cota,
            idt_status,
            dat_prev_encerra
        from _cota_
        where
            cod_tipo_associado = ? and
            cod_cota = ?
    """,(
        chave.cod_tipo_associado,
        chave.cod_cota,
    ))

    Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])
    linha = cr_ifx.fetchone()
    origem = Linha(*linha) if linha else None

    cr_sql.execute("""
        update Cota set
            IdClube = ?,
            TipoCota = ?,
            NumeroCota = ?,
            IdClasseCota = (select PkSql from PkDePara where Tabela = 'ClasseCota' and PkIfx = ?),
            DataCriacao = ?,
            StatusCota = ?,
            DataEncerramento = ?
        where
            IdCota = (select PkSql from PkDePara where Tabela = 'Cota' and PkIfx = ?)
    """,(
            origem.cod_clube,
            origem.cod_tipo_associado,
            origem.cod_cota,
            origem.cod_tipo_cota,
            origem.dat_criacao_cota,
            origem.idt_status,
            origem.dat_prev_encerra,
            linha_log.pk,
    ))

    if cr_sql.rowcount == 0:
        cr_sql.execute('begin transaction')

        cr_sql.execute(f"""
            insert into Cota
            (
                IdClube,
                TipoCota,
                NumeroCota,
                IdClasseCota,
                DataCriacao,
                StatusCota,
                DataEncerramento
            ) output inserted.IdCota  values (
                ? /*IdClube*/,
                ? /*TipoCota*/,
                ? /*NumeroCota*/,
                (select PkSql from PkDePara where Tabela = 'ClasseCota' and PkIfx = ?) /*IdClasseCota*/,
                ? /*DataCriacao*/,
                ? /*StatusCota*/,
                ? /*DataEncerramento*/
            )
        """,(
            origem.cod_clube,
            origem.cod_tipo_associado,
            origem.cod_cota,
            origem.cod_tipo_cota,
            origem.dat_criacao_cota,
            origem.idt_status,
            origem.dat_prev_encerra
        ))

        pkSql = cr_sql.fetchval()

        cr_sql.execute("insert into PkDePara values ('Cota',?,?)",(pkSql, linha_log.pk,))
        cr_sql.execute("commit transaction")

    cr_sql.close()

