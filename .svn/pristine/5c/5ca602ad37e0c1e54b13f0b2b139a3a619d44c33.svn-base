from recordtype import recordtype

def convert(conn_ifx, conn_sql, linha_log):
    cr_sql = conn_sql.cursor()
    try:
        cr_sql.execute('create table #sincronizando (dummy char(1))')
    except:
        pass

    cr_ifx = conn_ifx.cursor()
    cr_ifx.execute('execute procedure em_sincronismo()')

    if linha_log.banco == 'minas':
        cod_clube = 'MTC'
    elif linha_log.banco == 'nautico':
        cod_clube = 'MTNC'

    linha_log.pk = cod_clube+'|'+linha_log.pk

    Chave = recordtype('Chave', 'cod_clube, nro_seq_acomp')
    chave = Chave(*linha_log.pk.split('|'))

    if linha_log.operacao == 'del':
        cr_sql.execute(f"""
            delete from AcompanhanteAssociado
            where
                IdAcompanhante = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
        """, (
            linha_log.pk
        ))

        cr_sql.execute(f"""
            delete from Acompanhante
            where
                IdAcompanhante = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
        """, (
            linha_log.pk
        ))

        cr_sql.execute(f"""
            delete from PkDePara
            where
                tabela = 'Acompanhante' and
                PkSql = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
        """, (
            linha_log.pk
        ))

        cr_sql.close()
        return

    cr_ifx.execute(f"""
        select
            nom_acompanhante,
            case idt_sexo
                when 'M' then 'Masculino'
                when 'F' then 'Feminino'
            end as idt_sexo,
            dat_nascimento,
            des_identificacao,
            nro_seq_acomp,
            '{cod_clube}' || '|Acompanhante|' || nro_seq_acomp as cod_pessoa,
            cod_tipo_acomp,
            dat_inclusao,
            dat_prev_encerra,
            '{cod_clube}|' || cod_tipo_associado || '|' || cod_cota as cod_cota,
            idc_termo_acesso = 'S' as idc_termo_acesso,
            cod_carteira
        from {linha_log.banco}:acompanhante as acompanhante
        where
            nro_seq_acomp = ?
    """,(
        chave.nro_seq_acomp,
    ))

    Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])
    linha = cr_ifx.fetchone()
    origem = Linha(*linha) if linha else None

    # Pessoa
    #
    cr_sql.execute("""
        update Pessoa set
            Nome = ?,
            Sexo = ?,
            DataNascimento = ?,
            NumeroDocumento = ?,
            UltimaAlteracao = getdate()
        where
            IdPessoa = (select PkSql from PkDePara where Tabela = 'Pessoa' and PkIfx = ?)
    """,(
            origem.nom_acompanhante,
            origem.idt_sexo,
            origem.dat_nascimento,
            origem.des_identificacao,
            origem.cod_pessoa,
    ))

    if cr_sql.rowcount == 0:
        cr_sql.execute('begin transaction')

        cr_sql.execute(f"""
            insert into Pessoa
            (
                Nome,
                Sexo,
                DataNascimento,
                NumeroDocumento
            ) output inserted.IdPessoa values (
                ? /*Nome*/,
                ? /*Sexo*/,
                ? /*DataNascimento*/,
                ? /*NumeroDocumento*/
            )
        """,(
            origem.nom_acompanhante,
            origem.idt_sexo,
            origem.dat_nascimento,
            origem.des_identificacao
        ))

        pkSql = cr_sql.fetchval()

        cr_sql.execute("insert into PkDePara values ('Pessoa',?,?)",(pkSql, origem.cod_pessoa,))
        cr_sql.execute("commit transaction")

    # Acompanhante
    #
    cr_sql.execute("""
        update Acompanhante set
            NumeroSequenciaAcompanhante = ?,
            IdPessoa = (select PkSql from PkDePara where Tabela = 'Pessoa' and PkIfx = ?),
            IdTipoAcompanhante = (select PkSql from PkDePara where Tabela = 'TipoAcompanhante' and PkIfx = ?),
            DataInclusao = ?,
            DataPrevistaCancelamento = ?,
            IdCota = (select PkSql from PkDePara where Tabela = 'Cota' and PkIfx = ?),
            TermoAcesso = ?,
            CodigoCarteira = ?,
            UltimaAlteracao = getdate()
        where
            IdAcompanhante = (select PkSql from PkDePara where Tabela = 'Acompanhante' and PkIfx = ?)
    """,(
            origem.nro_seq_acomp,
            origem.cod_pessoa,
            origem.cod_tipo_acomp,
            origem.dat_inclusao,
            origem.dat_prev_encerra,
            origem.cod_cota,
            origem.idc_termo_acesso,
            origem.cod_carteira,
            linha_log.pk,
    ))

    if cr_sql.rowcount == 0:
        cr_sql.execute('begin transaction')

        cr_sql.execute(f"""
            insert into Acompanhante
            (
                NumeroSequenciaAcompanhante,
                IdPessoa,
                IdTipoAcompanhante,
                DataInclusao,
                DataPrevistaCancelamento,
                IdCota,
                TermoAcesso,
                CodigoCarteira
            ) output inserted.IdAcompanhante values (
                ? /*NumeroSequenciaAcompanhante*/,
                (select PkSql from PkDePara where Tabela = 'Pessoa' and PkIfx = ?) /*IdPessoa*/,
                (select PkSql from PkDePara where Tabela = 'TipoAcompanhante' and PkIfx = ?) /*IdTipoAcompanhante*/,
                ? /*DataInclusao*/,
                ? /*DataPrevistaCancelamento*/,
                (select PkSql from PkDePara where Tabela = 'Cota' and PkIfx = ?) /*IdCota*/,
                ? /*TermoAcesso*/,
                ? /*CodigoCarteira*/
            )
        """,(
            origem.nro_seq_acomp,
            origem.cod_pessoa,
            origem.cod_tipo_acomp,
            origem.dat_inclusao,
            origem.dat_prev_encerra,
            origem.cod_cota,
            origem.idc_termo_acesso,
            origem.cod_carteira
        ))

        pkSql = cr_sql.fetchval()

        cr_sql.execute("insert into PkDePara values ('Acompanhante',?,?)",(pkSql, linha_log.pk,))
        cr_sql.execute("commit transaction")

    cr_sql.close()

