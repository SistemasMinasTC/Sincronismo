from recordtype import recordtype

def convert(conn_ifx, conn_sql, linha_log):
   Chave = recordtype('Chave', 'cod_profissao')
   chave = Chave(*linha_log.pk.split('|'))

   cr_sql = conn_sql.cursor()
   try:
      cr_sql.execute('create table #sincronizando (dummy char(1))')
   except:
      pass

   cr_ifx = conn_ifx.cursor()
   cr_ifx.execute('execute procedure em_sincronismo()')

   if linha_log.operacao == 'del':
      cr_sql.execute(f"""
         delete from Profissao
         where
            IdProfissao = (select PkSql from PkDePara where Tabela = 'Profissao' and PkIfx = ?)
      """, (
         linha_log.pk
      ))

      cr_sql.close()
      return

   cr_ifx.execute(f"""
      select
         cod_cbo,
         des_profissao
      from {linha_log.banco}:profissoes as profissoes
      where
         cod_profissao = ?
   """,(
      chave.cod_profissao,
   ))

   Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])
   linha = cr_ifx.fetchone()
   origem = Linha(*linha) if linha else None

   cr_sql.execute("""
      update Profissao set
         CBO = ?,
         Nome = ?,
         UltimaAlteracao = getdate()
      where
         IdProfissao = (select PkSql from PkDePara where Tabela = 'Profissao' and PkIfx = ?)
   """,(
         origem.cod_cbo,
         origem.des_profissao,
         linha_log.pk,
   ))

   if cr_sql.rowcount == 0:
      cr_sql.execute('begin transaction')

      cr_sql.execute(f"""
         insert into Profissao
         (
            CBO,
            Nome
         ) output inserted.IdProfissao  values (?,?)
      """,(
         origem.cod_cbo,
         origem.des_profissao
      ))

      pkSql = cr_sql.fetchval()

      cr_sql.execute("insert into PkDePara values ('Profissao',?,?)",(pkSql, linha_log.pk,))
      cr_sql.execute("commit transaction")

   cr_sql.close()

