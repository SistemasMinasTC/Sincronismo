#!/usr/bin/python
#

from conexoes import *
NL='\n'

def createSincronismoIfxSql(tabelaIfx: str, primaryKeyIfx: list, tabelaSql: str, primaryKeySql: list, colunasAIgnorar = ()):
   ifx = conecta_informix()
   sql = conecta_mssql()

   cr_ifx = ifx.cursor()
   cr_ifx.execute(f'select * from {tabelaIfx}')
   colunasIfx = [col[0] for col in cr_ifx.description if col not in colunasAIgnorar]

   cr_sql = sql.cursor()
   cr_sql.execute(f'select * from {tabelaSql}')
   colunasSql = [col[0] for col in cr_sql.description]

   arquivo = open(f'{tabelaIfx}.py','w')

   arquivo.write(f"""\
#!/usr/bin/python
#

from recordtype import recordtype

def convert(conn_ifx, conn_sql, linha_log):
   Chave = recordtype('Chave', '{','.join(primaryKeyIfx)}')
   chave = Chave(*linha_log.pk.split('|'))

   cr_sql = conn_sql.cursor()
   try:
      cr_sql.execute('create table #sincronizando (dummy char(1))')
   except:
      pass

   cr_ifx = conn_ifx.cursor()
   cr_ifx.execute('execute procedure em_sincronismo()')

   if linha_log.operacao == 'delete':
      cr_sql.execute(f\"""
         delete from {tabelaSql}
         where
            {f' = ?,{NL}            '.join(primaryKeySql)} = ?
      \""", (
         chave.{f',{NL}         chave.'.join(primaryKeyIfx)},
      ))

      cr_sql.close()
      return

   cr_ifx.execute(\"""
      select
         {f',{NL}         '.join(colunasIfx)}
      from {tabelaIfx}
      where
         {f' = ?,{NL}         '.join(primaryKeyIfx)} = ?
   \""",(
      chave.{f',{NL}      chave.'.join(primaryKeyIfx)},
   ))

   Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])
   linha = cr_ifx.fetchone()
   origem = Linha(*linha) if linha else None

   cr_sql.execute(\"""
      update {tabelaSql} set
         {f' = ?,{NL}         '.join([col for col in colunasSql if col not in (primaryKeySql)])} = ?
      where
         {f' = ?,{NL}         '.join(primaryKeySql)} = ?
   \""",(
         origem.{f',{NL}         origem.'.join([col for col in colunasIfx if col not in (primaryKeyIfx)])},
         chave.{f',{NL}         chave.'.join(primaryKeyIfx)},
   ))

   if cr_sql.rowcount == 0:
      cr_sql.execute('set identity_insert {tabelaSql} on')
      cr_sql.execute(f\"""
         insert into {tabelaSql}
         (
            {f',{NL}            '.join(colunasSql)}
         ) values ({','.join('?'*len(colunasSql))})
      \""",(
         origem.{f',{NL}         origem.'.join(colunasIfx)}
      ))

   cr_sql.close()

# Teste
#
if __name__ == "__main__":
   import sys
   from conexoes import *

   ifx = conecta_informix()
   if not ifx:
      print('Banco informix não disponível')
      sys.exit()

   sql = conecta_mssql()
   if not sql:
      print('Banco mssql não disponível')
      sys.ex
   cr_ifx = ifx.cursor()

   cr_ifx.execute(\"""
      select
         id,
         data_hora,
         tabela,
         operacao,
         pk
      from mc_log
      where
         tabela = '{tabelaIfx}'
   \""")
   Linha = recordtype('Linha',[col[0] for col in cr_ifx.description])

   for linha in [Linha(*l) for l in cr_ifx]:
      print(linha)
      convert(ifx, sql, linha)
""")

   arquivo.close()

# Teste
#
if __name__ == "__main__":
   createSincronismoIfxSql('uf',('cod_uf',),'UF',('IdUF',),colunasAIgnorar=())
